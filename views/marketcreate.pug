extends layout 
 
block content 
  h1= title 
 
  form(id='marketForm', action="/resource/market", method="POST") 
    div.form-group 
        label.marketAttr(for='itemType') market type 
        input#itemType(type='text', name='itemType') 
    div.form-group 
        label.marketAttr(for='Quantity') market Quantity 
        input#Quantity(type='number', name='Quantity') 
    div.form-group 
        label.marketAttr(for='price') market price 
        input#price(type='text', name='price') 
    input(type="submit") 
 
  script. 
    document.forms['marketForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 